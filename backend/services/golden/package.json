{
  "name": "@shieldpay/golden-service",
  "author": "Shieldpay",
  "version": "1.0.0",
  "description": "Optimus BE-golden service",
  "scripts": {
    "clean:dependencies": "rm -rf node_modules",
    "build": "STAGE=${STAGE:-dev} npx cdk synth",
    "compile": "tsc --build",
    "deploy": "STAGE=${STAGE:-dev} npx cdk deploy --require-approval never --all",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "remove-deployment": "STAGE=${STAGE:-dev} cdk destroy --force --all",
    "test:coverage": "yarn jest --coverage --runInBand --silent",
    "test": "yarn jest --runInBand --silent",
    "typecheck": "tsc --noEmit",
    "migrate:up:test": "knex migrate:latest --knexfile ./src/knex/knexfile.ts --env testing",
    "migrate:down:test": "knex migrate:rollback --knexfile ./src/knex/knexfile.ts --env testing",
    "migrate:aws": "yarn sls invoke -f knex-run-migrations --stage ${STAGE:-dev} --log"
  },
  "dependencies": {
    "@middy/core": "4.3.0",
    "@middy/http-cors": "4.3.0",
    "@middy/http-error-handler": "4.3.0",
    "@middy/http-json-body-parser": "4.3.0",
    "constructs": "10.0.113",
    "knex": "2.4.2",
    "pino": "8.8.0"
  },
  "devDependencies": {
    "aws-cdk-lib": "2.74.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-jest": "27.2.1",
    "jest": "29.5.0",
    "nock": "13.3.0",
    "ts-jest": "29.0.5",
    "typescript": "5.0.4"
  }
}
