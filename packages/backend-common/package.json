{
  "name": "@andrew-org-test/backend-common",
  "author": "Andrew",
  "version": "1.0.14",
  "description": "Library for common backend logic, types, etc, used by all of the micro-services",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrew-org-test/example-mono.git",
    "directory": "packages/backend-common"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@andrew-org-test",
    "pkgRoot": "packages/backend-common/"
  },
  "files": [
    "dist/**"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "release": "npx semantic-release-plus --extends=./release.config.js"
  },
  "dependencies": {
    "@aws-sdk/client-sts": "3.321.1",
    "aws-cdk-lib": "2.77.0"
  },
  "devDependencies": {
    "@types/node": "18.16.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "prettier": "2.8.8",
    "typescript": "5.0.4"
  }
}
