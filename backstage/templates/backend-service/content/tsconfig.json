{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["stack/**/*.ts", "src/**/*.ts"],
  "references": [
    {
      "path": "../../lib/http"
    },
    {
      "path": "../../lib/logging"
    },
    {
      "path": "../../lib/util"
    },
    {
      "path": "../../common"
    },
    {
      "path": "../../lib/util"
    },
    {
      "path": "../../../shared"
    }
  ]
}
